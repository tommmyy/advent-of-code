{
    "parserOptions": {
        "ecmaVersion": 6,
	"sourceType": "module"
	},
	"env": { "jest": true, "node": true },
    "extends": "standard",
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": 0,
        "quote-props": ["error", "as-needed"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", "never"]
    }
}
